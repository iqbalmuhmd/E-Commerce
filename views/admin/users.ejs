<%- include('../partials/admin/header') %>
<%- include('../partials/admin/sidePanel') %>


<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Users</h4>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Images</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach((user,i) => { %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ9_wlOmP-CNgsfhApvHGnl6xwt9NLV_hoi1w&usqp=CAU" alt=""></td>
                      <td><%= user.name %></td>
                      <td><%= user.phone %></td>
                      <td><%= user.email %></td>
                      <td>
                        <% if (user.isVerified==true) { %>
                          <span class="badge badge-success">Verified</span>
                        <% } else { %>
                          <span class="badge badge-warning">Not Verified</span>
                        <% } %>
                      </td>
                      <td>
                        <% if (user.isActive==true) { %>
                            <a href="/admin/usersBlock?id=<%= user._id %>&&status=false" class="btn btn-danger btn-sm">Block</a>
                            <% } else { %>
                            <a href="/admin/usersBlock?id=<%= user._id %>&&status=true" class="btn btn-success btn-sm">Unblock</a>
                          <% } %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
