<%- include('../partials/admin/header') %>
<%- include('../partials/admin/sidePanel') %>

<div class="main-panel">
  <div class="content-wrapper">
    <a href="/admin/category" class="btn btn-primary mb-3">Back to category</a>
    <div class="row">
      <div class="col-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Edit Category</h4>
            <form class="forms-sample" method="post" action="/admin/category/edit-category">
              <div class="form-group">
                <label for="exampleInputName1">Category name</label>
                <input type="hidden" name="id" value="<%= categoryData._id %>"/>
                <input
                  type="text"
                  class="form-control"
                  id="exampleInputName1"
                  name="categoryName"
                  placeholder="Category Name"
                  value="<%= categoryData.category %>"
                />
                <label for="exampleInputName1">Offer</label>
                <input
                  type="number"
                  class="form-control"
                  id="exampleInputOffer"
                  name="offer"
                  placeholder="Offer in percentage"
                  value="<%=categoryData.offer%>"
                />
                <div class="text-center mt-2" style="font-weight: bold;">
                  <% if (typeof error !== 'undefined') { %>
                    <span class="text-danger"><%= error %></span>
                  <% } else if (typeof success !== 'undefined') { %>
                    <span class="text-success"><%= success %></span>
                  <% } %>
                </div>
              </div>
              <input type="submit" class="btn btn-primary mr-2" value="Submit">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
